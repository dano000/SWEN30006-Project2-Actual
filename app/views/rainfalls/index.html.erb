<p id="notice"><%= notice %></p>

<h1>Listing Rainfalls</h1>

<table>
  <thead>
    <tr>
      <th>Current</th>
      <th>Weather</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rainfalls.each do |rainfall| %>
      <tr>
        <td><%= rainfall.current %></td>
        <td><%= rainfall.weather %></td>
        <td><%= link_to 'Show', rainfall %></td>
        <td><%= link_to 'Edit', edit_rainfall_path(rainfall) %></td>
        <td><%= link_to 'Destroy', rainfall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rainfall', new_rainfall_path %>
